<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Ripple.WebSocketClient</AssemblyName>
    <RootNamespace>Ripple.WebSocketClient</RootNamespace>
    <Authors>Maitland Marshall</Authors>
    <Company>Maintenance Experts</Company>
    <Description>Ripple.WebSocketClient is a C# NetStandard 2.0 client implementation for the Ripple WebSocket APIs.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RepositoryUrl>https://github.com/MaintenanceExperts/Ripple.WebSocketClient</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/MaintenanceExperts/Ripple.WebSocketClient/blob/master/LICENSE</PackageLicenseUrl>
    
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    
    <Version>0.0.6</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="Ripple.Core" Version="0.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Requests\Server\" />
  </ItemGroup>

</Project>
